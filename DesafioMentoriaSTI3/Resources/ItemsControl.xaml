    <Style TargetType="TextBlock" x:Key="ItemsControl">

        <Style.Triggers>
            <DataTrigger Binding="{Binding ListaPedidos.status}" Value="Cancelado">
                <Setter Property="Foreground" Value="red"/>

            </DataTrigger>
        </Style.Triggers>
        
    </Style>
    
</ResourceDictionary>